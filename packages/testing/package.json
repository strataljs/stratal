{
  "name": "@stratal/testing",
  "version": "0.0.1",
  "description": "Testing utilities and mocks for Stratal framework applications",
  "type": "module",
  "license": "MIT",
  "author": "Stratal Contributors",
  "homepage": "https://github.com/strataljs/stratal#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strataljs/stratal.git",
    "directory": "packages/testing"
  },
  "bugs": {
    "url": "https://github.com/strataljs/stratal/issues"
  },
  "keywords": [
    "stratal",
    "testing",
    "mocks",
    "cloudflare-workers",
    "vitest"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./mocks": {
      "types": "./dist/mocks/index.d.ts",
      "import": "./dist/mocks/index.js"
    },
    "./mocks/nodemailer": {
      "types": "./dist/mocks/nodemailer.d.ts",
      "import": "./dist/mocks/nodemailer.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "prebuild": "yarn clean",
    "typecheck": "tsc --noEmit",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint --fix ."
  },
  "dependencies": {
    "@faker-js/faker": "^10.3.0",
    "@golevelup/ts-vitest": "^2.2.0"
  },
  "peerDependencies": {
    "stratal": "^0.0.1",
    "vitest": "^3.2.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.18",
    "@cloudflare/workers-types": "4.20260228.1",
    "@types/node": "^25.3.2",
    "stratal": "workspace:*",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
