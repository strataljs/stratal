{
  "name": "stratal-monorepo",
  "packageManager": "yarn@4.12.0",
  "private": true,
  "description": "A modular Cloudflare Workers framework with dependency injection, queue-based events, and type-safe configuration",
  "license": "MIT",
  "author": "Temitayo Fadojutimi",
  "homepage": "https://stratal.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strataljs/stratal.git"
  },
  "bugs": {
    "url": "https://github.com/strataljs/stratal/issues"
  },
  "keywords": [
    "cloudflare-workers",
    "framework",
    "dependency-injection",
    "modules",
    "hono",
    "queue",
    "cron",
    "i18n",
    "openapi",
    "typescript"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "yarn workspaces foreach -A --no-private npm publish --tolerate-republish",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch"
  },
  "lint-staged": {
    "*.{ts,mts}": [
      "eslint --fix"
    ]
  },
  "resolutions": {
    "fast-xml-parser": ">=5.3.8"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^10.0.1",
    "@eslint/json": "^1.0.1",
    "eslint": "^10.0.2",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.3.0",
    "typedoc": "^0.28.17",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  }
}
