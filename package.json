{
  "name": "stratal-monorepo",
  "packageManager": "yarn@4.12.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "yarn workspaces foreach -A npm publish --tolerate-republish"
  },
  "lint-staged": {
    "*.{ts,mts}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^0.14.0",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  }
}
